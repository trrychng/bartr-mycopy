
<body class = "bg-dark">
<div class="container bg-primary">
<form enctype="multipart/form-data" method="POST" action="/api/items">
    <h1>{{title}}</h1>
    <div class="form-group">
        <label for="itemName">Item</label>
        <input type="text" name="itemName" class="form-control" placeholder="Item">
    </div>
    <div class="form-group">
        <label for="inputCategory">Category</label>
        <select id="inputCategory" name="inputCategory" class="form-control">
            {{#each Category}}
            <option value={{id}}>{{Category}}</option>

            {{/each}}
        </select>
    </div>
    <div class="form-group">
        <label for="description">Description</label>
        <input type="text" name="description" class="form-control" placeholder="Description">
    </div>
    <div class="form-group">
        <label for="price">Price</label>
        <input type="number" min="0.01" step="0.01" name="price" class="form-control" placeholder="Price">
    </div>
    <div class="form-group">
        <label for="Location">Address</label>
        <input type="text" name="location" class="form-control" placeholder="Address">
    </div>
        <div class="form-group">
            <label for="uploaded_image" class="col-md-3 control-label">Item Image</label>
                <input class="form-control" type="file" name="uploaded_image" accept="" />
        </div>
    

    <button type = "submit" class = "font-weight-bold btn btn-dark pull-left button-block size">Submit</button>
    </div>


</form>
</body>

<script src="/assets/js/item.js" type="text/javascript"></script>
</body>