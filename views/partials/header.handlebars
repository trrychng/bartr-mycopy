<header>
			<div class="navbar">
				<a href="/"><img src="/assets/img/website/bartr_logo.png" height="100px"> </a>
					<div class="row">
						<!-- /.col-lg-6 -->
						<div class="col-lg-12">
						</div>
					</div>
				<div class="col-sm-4 offset-md-1 py-4">
              <ul class="list-unstyled">
                <li><a href="/" class="text-black">Home</a></li>
                {{#if isAuthenticated}}
                <li><a href="/logout" class="text-black">Logout</a></li>
                <li><a href="/profile" class="text-black">Profile</a></li>
                <li><a href="/items" class="text-black">Items</a></li>
                <li><a href="/additem" class = "text-black">Add Item</a></li>
                {{else}}
                <li><a href="/register" class="text-black">Register</a></li>
                <button onclick="document.getElementById('id01').style.display='block'" style="width:auto;">Login</button>
                {{/if}}
              </ul>
            </div>
				
        

				<div id="id01" class="modal">
				
					<form class="modal-content animate" method ="POST" action="/login">
						<div class="imgcontainer">
							<span onclick="document.getElementById('id01').style.display='none'" class="close" title="Close Modal">&times;</span>
						</div>
				
						<div class="container">
							<label for="username">
								<b>Username</b>
							</label>
							<input type="text" placeholder="Enter Username" name="username" required>
				
							<label for="password">
								<b>Password</b>
							</label>
							<input type="password" placeholder="Enter Password" name="password" required>
				
							<button type="submit">Login</button>
							<label>
								<input type="checkbox" checked="checked" name="remember"> Remember me
							</label>
						</div>
				
						<div class="container" style="background-color:#f1f1f1">
							<button type="button" onclick="document.getElementById('id01').style.display='none'" class="cancelbtn">Cancel</button>
							<span class="psw"> <a href="#">Forgot Password?</a>
							</span>
						</div>
					</form>
				</div>
			</div>
           <div class="jumbotron text-center"></section>
        
       

 <div class="btn-group">

            {{#each Category}}
			<div class = "col-sm-2">
			<h6>{{Category}}</h6>
            <button class="button button{{id}} {{Category}}" > <a href="/items/{{Category}}">  <img src={{imgSource}} height="45px" width = "60px">  </button></a>
            </div>
			{{/each}}

           </div>
        </div>
      </div>
		</header>
